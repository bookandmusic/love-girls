# ==============================
# 应用信息
# ==============================
APP_NAME=love-girl
APP_ENV=dev
APP_VERSION=0.1.0

# ==============================
# HTTP 服务
# ==============================
SERVER_ADDR=:8182
SERVER_SCHEMA=http
SERVER_HOST_NAME=localhost:8182
SERVER_MODE=debug

# ==============================
# 日志配置
# ==============================
LOG_LEVEL=debug

# ==============================
# 数据库配置
# ==============================
DATASOURCE_DATABASE_DRIVER=sqlite
DATASOURCE_DATABASE_DSN=file:./data/love-girl.db?_fk=1

# ==============================
# JWT 配置
# ==============================
JWT_SECRET=love-girl-123456789012345678901234
JWT_ISSUER=love-girl
JWT_EXPIRE=900        # 单位秒 (15分钟)

# ==============================
# 存储配置（选择 backend） 
# local | s3 | webdav
# ==============================
STORAGE_BACKEND=local

# ------------------------------
# Local 存储
# ------------------------------
STORAGE_LOCAL_ROOT=./data/uploads
STORAGE_LOCAL_PUBLIC_BASE_URL=file://./data/uploads

# ------------------------------
# S3 存储（示例，可选）
# ------------------------------
STORAGE_S3_USE_SSL=true
STORAGE_S3_ENDPOINT=s3.example.com
STORAGE_S3_REGION=us-east-1
STORAGE_S3_BUCKET=mybucket
STORAGE_S3_PUBLIC_BASE_URL=https://cdn.example.com

STORAGE_S3_CREDENTIALS_ACCESS_KEY_ID=AKIAxxxxxxx
STORAGE_S3_CREDENTIALS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxx

STORAGE_S3_PRESIGN_ENABLED=false
STORAGE_S3_PRESIGN_EXPIRE=3600  # 单位秒

# ------------------------------
# WebDAV 存储（示例，可选）
# ------------------------------
STORAGE_WEBDAV_ENDPOINT=https://webdav.example.com
STORAGE_WEBDAV_BASE_PATH=/uploads
STORAGE_WEBDAV_PUBLIC_BASE_URL=https://cdn.example.com

STORAGE_WEBDAV_AUTH_USERNAME=admin
STORAGE_WEBDAV_AUTH_PASSWORD=123456

# ==============================
# 访问策略
# ==============================

# Gin HTTP Proxy
STORAGE_ACCESS_GIN_PROXY_ENABLED=true

# 图片代理（imgproxy / thumbor）
STORAGE_ACCESS_IMAGE_PROXY_ENABLED=false
STORAGE_ACCESS_IMAGE_PROXY_BASE_URL=http://localhost:8080/imgproxy

