{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "ui",
            "request": "launch",
            "command": "pnpm run dev --host=0.0.0.0",
            "cwd": "${workspaceFolder}/frontend",
            "env": {
                "VITE_ENV": "dev",
                "VITE_TARGET_SERVER": "http://127.0.0.1:8181"
            }
        },
        {
            "command": "imageproxy -cache memory:200:4h -cache /tmp/imageproxy -addr :6060 -passRequestHeaders \"Authorization\"",
            "name": "imageproxy",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "SERVER_ADDR": ":8181"
            }
        }
    ]
}